<section class="content-header">
  <h1><%= t('dashboard') %></h1>
</section>

<section class="content">
  <div class="box">
    <div class="box-body">
      <table class="table table-hover">
        <thead>
        <tr>
          <th rowspan="2"></th>

          <% (@start_date..@end_date).to_a.map do |day| %>
              <th class="<%= get_class_flags day %>"><%= day.strftime t('date_month_format') %></th>
          <% end %>
        </tr>
        <tr>
          <% (@start_date..@end_date).to_a.map do |day| %>
              <th class="<%= get_class_flags day %>"><%= day.strftime '%A' %></th>
          <% end %>
        </tr>
        </thead>
        <tbody>
        <% @vehicles.each do |v| %>
            <tr>
              <th><%= v.nome %></th>

              <% (@start_date..@end_date).to_a.map do |day| %>
                  <td class="<%= get_class_flags_with_categories day, @days_categories[v.id][day] %>"><%= @days_categories[v.id][day] %></td>
              <% end %>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= render 'date_navigator', start_date: @start_date, end_date: @end_date %>
</section>