<section class="content-header">
  <h1><%= t('dashboard') %></h1>
</section>

<section class="content">
  <div class="box" id="calculate-box">
    <div class="box-body">
      <div class="row">
        <div class="col-md-4">
          <%= form_with id: 'calculate-form' do |form| %>

              <label><%= Day.human_attribute_name('period') %></label>

              <label id="period-error-label" class="side-error"></label>

              <div class="form-group">
                <div class="input-group input-daterange">
                  <%= form.text_field 'start_date', class: 'form-control', id: 'start-date' %>

                  <div class="input-group-addon"><%= t('to') %></div>

                  <%= form.text_field 'end_date', class: 'form-control', id: 'end-date' %>
                </div>
              </div>

              <div class="form-group">
                <label><%= Vehicle.model_name.human %></label>

                <%= form.select 'vehicle', @vehicles.collect {|v| [v.nome, v.id]}, {include_blank: true}, {class: 'form-control', id: 'vehicle'} %>
              </div>

              <div class="form-group">
                <label><%= t('activerecord.attributes.price.hours') %></label>

                <%= form.text_field 'hours', class: 'form-control number-only', id: 'hours' %>
              </div>

              <%= form.button "<i class='fa fa-calculator'></i> #{t('calculate')}".html_safe, class: 'btn btn-primary' %>
          <% end %>
        </div>

        <div class="col-md-4">
          <div id="prices-details-container"></div>
        </div>

        <div class="col-md-4">
          <div id="total-price-container">
            <h1>Total Price</h1>

            <h2>$0.00</h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="box" id="calendar-box">
    <div class="box-body">
      <div id="calendar-container"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= link_to "<i class='fa fa-arrow-left'></i> #{t('previous')}".html_safe, '', class: 'btn btn-default', id: 'previous-date' %>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <input type="text" id="date-navigator-input" class="form-control" placeholder="<%= t('choose_date') %>"/>
      </div>
    </div>

    <div class="col-md-4 to-right">
      <%= link_to "<i class='fa fa-arrow-right'></i> #{t('next')}".html_safe, '', class: 'btn btn-default', id: 'next-date' %>
    </div>
  </div>
</section>